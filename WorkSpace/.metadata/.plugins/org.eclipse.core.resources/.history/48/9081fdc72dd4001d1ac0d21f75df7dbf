package pack06_game;

import java.util.Random;
import java.util.Scanner;

public class project01_game {
	public static void main(String[] args) {
		int random = new Random().nextInt(100) + 1;
		System.out.println("1부터 100 사이의 정수를 입력하세요.");
		Scanner sc = new Scanner(System.in);
		String inputData1 = sc.nextLine();
		int userNum1 = Integer.parseInt(inputData1);
		
		if(random==userNum1) {
			System.out.println("맞췄습니다!");
		}else if(random<userNum1) {
			System.out.println("더 작은 수를 입력하세요.");
		}else{
			System.out.println("더 큰 수를 입력하세요.");
		}
		String inputData2 = sc.nextLine();
		int userNum2 = Integer.parseInt(inputData2);
		if(random==userNum2) {
			System.out.println("맞췄습니다!");
		}else if(random<userNum2) {
			System.out.println("더 작은 수를 입력하세요.");
		}else{
			System.out.println("더 큰 수를 입력하세요.");
		}
	}
}
