package pack03_for;

public class Ex01_For {
	public static void main(String[] args) {
		// 반복문 중 for문(루프, 루핑, 순환)
		// for(반복될 변수 초기화; 조건식; 증감식){
		// 반복구간(코드)
		// }
		// [예]for(int i=o; i<10; i++){
		// i가 0~9 총 10번 동작하는 반복문
		for(int i=0; i<10;) { //무한루프, 잘못된 반복문의 예시ㅋㅋ
			System.out.println("for문 변수 i의 값:"+i);
			break;
		}
		//0부터 9사이의 짝수만 출력되게 하기
		for(int i=0; i<9; i+=2) {
			System.out.println(i);
		}
		System.out.println(i);
	}// m
}// c
